name: Terraform CI/CD Pipeline

on:
  push:
    branches:
      - main  # Adjust this if you want to trigger on different branches

jobs:
  terraform:
    name: Terraform
    runs-on: ubuntu-latest

    env:
      TF_VAR_gitlab_token: ${{ secrets.GITLAB_ACCESS_TOKEN }}
      AWS_ACCESS_KEY_ID: ${{ secrets.MY_AWS_KEY }}
      AWS_SECRET_ACCESS_KEY: ${{ secrets.MY_AWS_ACCESS_KEY }}
      AWS_DEFAULT_REGION: "us-east-1"

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v2
        with:
          terraform_version: 1.0.0  # Specify the version of Terraform you want to use

      - name: Cache Terraform
        uses: actions/cache@v2
        with:
          path: .terraform
          key: ${{ runner.os }}-terraform-${{ hashFiles('**/*.tf') }}
          restore-keys: |
            ${{ runner.os }}-terraform-

      - name: Terraform Init
        run: terraform init -backend-config="tfstate.config"

      - name: Terraform Validate
        run: terraform validate

      - name: Terraform Plan
        run: terraform plan -out="planfile"

      - name: Terraform Apply
        if: github.event_name == 'workflow_dispatch' || github.ref == 'refs/heads/main'
        run: terraform apply -input=false "planfile"

      - name: Terraform Destroy
        if: github.event_name == 'workflow_dispatch' && github.ref == 'refs/heads/main'
        run: terraform destroy --auto-approve
